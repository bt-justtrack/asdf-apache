#!/usr/bin/env bash

set -e
set -o pipefail

if [ -n "${DEBUG}" ]; then
  set -x
fi

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE}
TMPDIR=${TMPDIR:-/tmp}
[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install_release() {
  local product_name="$1"
  local version="$2"
  local install_path="$3"
  local product_name_version="${product_name}-${version}"

  local bin_install_path="$install_path/bin"
  mkdir -p "${bin_install_path}"

  local download_url="$(get_download_url $product_name $version)"

  local bin_path="${bin_install_path}/${product_name}"
  echo "Downloading ${product_name_version} from ${download_url}"
  download "$download_url" "$bin_path"
  chmod +x "$bin_path"
}

get_download_url() {
  local product_name="$1"
  local version="$2"
  local product_name_version="${product_name}-${version}"
  echo "https://archive.apache.org/dist/${product_name}/${product_name_version}/${product_name_version}-bin-scala_2.11.tgz"
}

download() {
  local download_url="${1}"
  local output_path="${2}"
  local curl_cmd="$(command -vp curl)"
  $($curl_cmd -fS -# "$download_url" -o "$output_path")
}

product_name="flink"
version="$ASDF_INSTALL_VERSION"

install_release $product_name $version $ASDF_INSTALL_PATH

if [ -n "${DEBUG}" ]; then
  set +x
fi
